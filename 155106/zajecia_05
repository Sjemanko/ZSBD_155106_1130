DECLARE 
zmienna NUMBER := 20;
srednia NUMBER;
BEGIN
SELECT AVG(salary) INTO srednia FROM employees;
DBMS_OUTPUT.PUT_LINE('hello, PL/SQL ' || zmienna);
DBMS_OUTPUT.PUT_LINE('srednia: ' || srednia);

